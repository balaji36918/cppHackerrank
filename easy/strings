#include <iostream>
#include <string>
using namespace std;

int main() {
	// Complete the program
    string a, b, c ;
    cin >> a ;
    cin >> b ;
    c = a + b;
    cout << a.size() << " " << b.size() << endl;
    cout << c << endl;
    char temp1;
    temp1 = a[0];
    a[0] = b[0];
    b[0] = temp1;
    cout << a << " " << b << endl;
    return 0;
}
